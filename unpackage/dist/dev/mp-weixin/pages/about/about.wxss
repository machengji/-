
.container {
  padding: 20px;
}
.header {
  margin-bottom: 20px;
  text-align: center;
}
.title {
  font-size: 24px;
  font-weight: bold;
  display: block;
  margin-bottom: 10px;
}
.section {
  margin-bottom: 20px;
}
.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
  display: block;
}
.content {
  font-size: 14px;
  color: #333;
  display: block;
  margin-bottom: 10px;
  line-height: 1.6;
}
.contact-section {
  margin-top: 30px;
}
.contact-info {
  display: flex;
  align-items: center;
}
.contact-label {
  font-weight: bold;
  margin-right: 5px;
}
.contact-value {
  color: #007bff; /* 蓝色，表示可点击 */
  text-decoration: underline; /* 下划线，表示可点击 */
}
